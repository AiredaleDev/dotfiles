# Because it's a pain in the ass to set aliases for two shells.
alias ls='ls --color=auto'
alias v='nvim'
alias sc='cd ~/.scripts && ls'
alias hask='cd ~/Programs/Haskell && ls'
alias topy='cd ~/Programs/Python && ls'
alias tors='cd ~/Programs/Rust && ls'
alias togo='cd ~/Programs/Go && ls'
alias dwc='cd ~/.sucklessbuilds/dwm && ls'
alias dmc='cd ~/.sucklessbuilds/dmenu && ls'
alias stc='cd ~/.sucklessbuilds/st && ls'
alias py='python3'
alias sysup='sudo apt update && sudo apt upgrade'
alias bsprc='$EDITOR ~/.config/bspwm/bspwmrc'
alias polyconf='$EDITOR ~/.config/polybar/config'
